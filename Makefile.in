VERSION = 0
SUBVERSION = 0
EXTRAVERSION = 0
RELEASE = $(VERSION).$(SUBVERSION).$(EXTRAVERSION)
SHELL = /bin/sh
TARGETDIR = $(HOME)/lib
HEADERSDIR = $(HOME)/prog/include
HAPIHDR = $(HEADERSDIR)/stdhapi.h
CACHE = $(TARGETDIR)/ld.so.cache
HCOREDIR = ./hcore/
HCONSOLEDIR = ./hconsole/
TOOLSDIR = ./tools/
DBWRAPPERDIR = ./dbwrapper/
HDATADIR = ./hdata/
