#-------------------------------------------------------------------

#	this is "rule" for linking libs

.SECONDEXPANSION:

$(LIB_PREFIX)%.$(LIB_SUFFIX): $$(OBJS_$$(*)) $$(DEPS_$$(*))
	@$(call msg,printf "%b" "Linking \`$(@) ... $(BOLD)$(RED)";) \
	$(call invoke,$(LXX) $(LIBS) $(LXXFLAGS) @SONAME_FLAG@ -o $(@) \
			@START_GROUP@ $(OBJS_$(*)) @END_GROUP@ $(LIBS_$(*)) 2>&1 | tee -a make.log;) $(call msg, printf "%b" "$(RS)";)
	@test -f $(@) || exit 1
ifeq ($(LIB_PREFIX),lib)
	@$(AR) $(ARFLAGS) lib$(*).$(LIB_ARCHIVE_SUFFIX) $(OBJS_$(*)) | tee -a make.log ; \
	$(RANLIB) lib$(*).$(LIB_ARCHIVE_SUFFIX)
endif
	@/bin/cp -f $(@) lib$(*).$(LIB_ARCHIVE_SUFFIX) $(DIR_LIB)/; $(call msg,printf "%b" "making cache ... ";)
ifeq ($(LIB_PREFIX),lib)
	@cd $(DIR_LIB) && $(DIR_LIB)/mkcache && \
	ln -sf lib$(*).so.$(RELEASE) lib$(*).so.$(VERSION).$(SUBVERSION) && \
	ln -sf lib$(*).so.$(VERSION).$(SUBVERSION) lib$(*).so.$(VERSION) && \
	ln -sf lib$(*).so.$(VERSION) lib$(*).so
endif
	@$(call msg,printf "%b$(NL)" "done.$(CL)")

